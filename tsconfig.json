{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
